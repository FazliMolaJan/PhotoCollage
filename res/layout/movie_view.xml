<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_2" >

    <VideoView
        android:id="@+id/video_movie"
        android:layout_width="match_parent"
        android:layout_height="212dp" />

<TableRow
        android:id="@+id/widget200"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" >
        
        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            android:padding="3dp"
            android:background="@color/green_1"            
            android:scaleType="centerInside"
            android:src="@drawable/share_32"
            android:elevation="3dp" />
        
        <ImageButton
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            android:padding="3dp"
            android:background="@color/green_1"            
            android:scaleType="centerInside"
            android:src="@drawable/download_tray_32"
            android:elevation="3dp" />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            android:padding="3dp"
            android:background="@color/green_1"            
            android:scaleType="centerInside"
            android:src="@drawable/refresh_button_32"
            android:elevation="3dp" />


    </TableRow>

 	<TextView
 	    android:id="@+id/text1"
 	    android:layout_width="match_parent"
 	    android:layout_height="150dp"
 	    android:gravity="center_vertical|center_horizontal"
 	    android:text="@string/finishText" />

    <Button
        android:id="@+id/btn_fin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/finish" />

</LinearLayout>