<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green_2" >

    <VideoView
        android:id="@+id/video_movie"
        android:layout_width="match_parent"
        android:layout_height="212dp" />

<TableRow
        android:id="@+id/widget200"
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp" >
        
        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="1sp"
            android:padding="3sp"
            android:background="@color/green_1"            
            android:scaleType="centerInside"
            android:src="@drawable/share_32" />
        
        <ImageButton
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="1sp"
            android:padding="3sp"
            android:background="@color/green_1"            
            android:scaleType="centerInside"
            android:src="@drawable/download_tray_32" />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="1sp"
            android:padding="3sp"
            android:background="@color/green_1"            
            android:scaleType="centerInside"
            android:src="@drawable/refresh_button_32" />


    </TableRow>

 	<TextView
 	    android:id="@+id/text1"
 	    android:layout_width="match_parent"
 	    android:layout_height="150sp"
 	    android:gravity="center_vertical|center_horizontal"
 	    android:text="@string/finishText" />

    <Button
        android:id="@+id/btn_fin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/finish" />

</LinearLayout>