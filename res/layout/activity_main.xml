    <TableRow
        android:id="@+id/widget151"
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:layout_margin="2sp" >

        <HorizontalScrollView
            android:id="@+id/honScview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/anogallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/black"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>
    </TableRow>

    <TableRow
        android:id="@+id/widget152"
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp" >

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="1sp"
            android:padding="3sp"
            android:background="@color/green_1"            
            android:scaleType="centerInside"
            android:onClick="onPlay"
            android:src="@drawable/speaker_filled_audio_tool_32" />
      
        
        <ImageButton
            android:id="@+id/btn_setSec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="1sp"
            android:padding="3sp"
            android:background="@color/green_1"
            android:scaleType="centerInside"
            android:onClick="setSecond"
            android:src="@drawable/passage_of_time_32" />
        
        <ImageButton
            android:id="@+id/btn_turnLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="1sp"
            android:padding="3sp"
            android:background="@color/green_1"
            android:scaleType="centerInside"
            android:onClick="turn"
            android:src="@drawable/left_arrow_32" />
        
        <ImageButton
            android:id="@+id/btn_turnRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="1sp"
            android:padding="3sp"
            android:background="@color/green_1"
            android:scaleType="centerInside"
            android:onClick="turn"
            android:src="@drawable/right_arrow_32" />
        <ImageButton
            android:id="@+id/btn_moveLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="1sp"
            android:padding="3sp"
            android:background="@color/green_1"
            android:scaleType="centerInside"
            android:onClick="move"
            android:src="@drawable/move_left_arrow_32" />
        <ImageButton
            android:id="@+id/btn_moveRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="2sp"
            android:layout_marginTop="1sp"
            android:padding="3sp"
            android:background="@color/green_1"
            android:scaleType="centerInside"
            android:onClick="move"
            android:src="@drawable/move_right_arrow_32" />
        
    </TableRow>
