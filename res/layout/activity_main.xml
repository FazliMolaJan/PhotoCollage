    <TableRow
        android:id="@+id/widget153"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp" >

        <Button
            android:id="@+id/btn_addPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="2sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/images_32"
            android:paddingBottom="20sp"
            android:paddingTop="30sp"
            android:text="@string/btn_addPic"
            android:textColor="@color/green_1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_addMus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="2sp"
            android:layout_marginTop="2sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/note_beam_32"
            android:paddingBottom="20sp"
            android:paddingTop="30sp"
            android:text="@string/btn_addMus"
            android:textColor="@color/green_1"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:id="@+id/widget154"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp" >

        <Button
            android:id="@+id/btn_addSpe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="4sp"
            android:layout_marginTop="2sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/recorder_microphone_32"
            android:paddingBottom="20sp"
            android:paddingTop="30sp"
            android:text="@string/btn_addRec"
            android:textColor="@color/green_1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_addEff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3sp"
            android:layout_marginLeft="4sp"
            android:layout_marginRight="2sp"
            android:layout_marginTop="2sp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableTop="@drawable/camera_effects_magic_wand_32"
            android:paddingBottom="20sp"
            android:paddingTop="30sp"
            android:text="@string/btn_addEff"
            android:textColor="@color/green_1"
            android:textSize="15sp"
            android:onClick="addEffect" />
    </TableRow>

    <TableRow
        android:id="@+id/widget156"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp" >

        <Button
            android:id="@+id/btn_generate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="2sp"
            android:layout_marginRight="2sp"
            android:layout_marginTop="3sp"
            android:background="@color/green_1"
            android:drawableLeft="@drawable/movie_film_32"
            android:paddingBottom="6sp"
            android:paddingLeft="110sp"
            android:paddingRight="80sp"
            android:paddingTop="10sp"
            android:text="@string/btn_generate"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </TableRow>

</LinearLayout>